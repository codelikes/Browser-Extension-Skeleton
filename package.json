{
  "name": "markmateai-browser-extension",
  "version": "0.0.1",
  "description": "MarkMate AI, AI-powered Bookmark Manager: Organize, structure, and find your bookmarks effortlessly",
  "author": "Mykola Ponych",
  "license": "MIT",
  "homepage_url": "https://markmateai.ponich.com",
  "scripts": {
    "clean": "rimraf build release",
    "prebuild": "npm run clean",
    "build:dev": "webpack --mode=development --config src/config/webpack.config.js",
    "build": "webpack --mode=production --config src/config/webpack.config.js",
    "watch": "webpack --mode=development --watch --config src/config/webpack.config.js",
    "pack": "node src/app/global/_cli/pack.js",
    "predeploy": "npm run build",
    "deploy": "npm run pack && node src/app/global/_cli/deploy.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prettier": "prettier --write --ignore-unknown \"src/**/*.{html,css,js,ts,json}\" \"tests/**/*.{html,css,js,ts,json,md}\" \"*.{html,css,js,ts,json,md}\"",
    "lint": "npx eslint \"src/**/*.{js,ts}\" \"tests/**/*.{js,ts}\" --max-warnings=0 --ignore-path .gitignore",
    "lint:fix": "npx eslint \"src/**/*.{js,ts}\" \"tests/**/*.{js,ts}\" --max-warnings=0 --ignore-path .gitignore",
    "update-dependencies": "npx npm-check-updates --upgrade",
    "gpt-helper": "./gpt.sh -e \"js,json5,ts\" ./"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.10",
    "@babel/core": "^7.22.10",
    "@babel/eslint-parser": "^7.22.10",
    "@babel/plugin-transform-runtime": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "@types/adm-zip": "^0.5.0",
    "@types/chrome": "^0.0.243",
    "@types/jest": "^29.5.3",
    "@types/jest-json-schema": "^6.1.1",
    "adm-zip": "^0.5.10",
    "autoprefixer": "^10.4.14",
    "babel-jest": "^29.6.2",
    "babel-loader": "^9.1.3",
    "chrome-webstore-upload-cli": "^2.2.2",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.47.0",
    "eslint-import-resolver-babel-module": "^5.3.2",
    "eslint-plugin-import": "^2.28.0",
    "file-loader": "^6.2.0",
    "html-loader": "^4.2.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "jest-json-schema": "^6.1.0",
    "json5": "^2.2.3",
    "json5-loader": "^4.0.1",
    "lint-staged": "^13.2.3",
    "lodash": "^4.17.21",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss-loader": "^7.3.3",
    "prettier": "^3.0.1",
    "raw-loader": "^4.0.2",
    "rimraf": "^5.0.1",
    "sass": "^1.65.1",
    "sass-loader": "^13.3.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.9.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {}
      ]
    ],
    "plugins": [
      "@babel/plugin-transform-runtime",
      "@babel/plugin-syntax-dynamic-import"
    ]
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parser": "@babel/eslint-parser",
    "rules": {
      "import/no-unresolved": "error",
      "no-unused-vars": "warn"
    },
    "root": true,
    "parserOptions": {
      "parser": "@babel/eslint-parser",
      "ecmaVersion": 2021
    },
    "env": {
      "browser": true,
      "node": true,
      "webextensions": true
    },
    "globals": {
      "chrome": "readonly"
    },
    "plugins": [
      "import"
    ],
    "overrides": [
      {
        "env": {
          "jest": true,
          "node": true,
          "webextensions": true
        },
        "files": [
          "**/*.test.js"
        ]
      }
    ],
    "settings": {
      "import/resolver": {
        "babel-module": {}
      }
    }
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.js?(x)",
      "**/?(*.)+(spec|test).js?(x)"
    ],
    "transform": {
      "^.+\\.js$": [
        "babel-jest"
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "semi": true,
    "printWidth": 180
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run prettier --",
      "npm run lint:fix --"
    ],
    "*.{json,css,md}": [
      "npm run prettier --"
    ]
  }
}
