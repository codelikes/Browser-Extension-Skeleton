{
  "name": "markmateai-browser-extension",
  "version": "0.0.1",
  "description": "MarkMate AI, AI-powered Bookmark Manager: Organize, structure, and find your bookmarks effortlessly",
  "author": "Mykola Ponych",
  "scripts": {
    "build": "npm run build:clear && webpack --mode=production --config src/config/webpack.config.js",
    "build:clear": "rm -rf build/*",
    "build:watch": "npm run build:clear && webpack --mode=development --watch --config src/config/webpack.config.js",
    "build:pack": "node pack.js",
    "build:repack": "npm run build && npm run build:pack",
    "test": "jest",
    "format": "prettier --write --ignore-unknown \"src/**/*.{html,css,js,ts,json}\"",
    "gpt-helper:generate": "./gpt.sh -e \"js,json5,ts\" ./"
  },
  "devDependencies": {
    "@babel/core": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "adm-zip": "^0.5.10",
    "autoprefixer": "^10.4.14",
    "babel-jest": "^29.6.2",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.8.1",
    "file-loader": "^6.2.0",
    "jest": "^29.6.2",
    "jest-json-schema": "^6.1.0",
    "json5": "^2.2.3",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss-loader": "^7.3.3",
    "prettier": "^2.8.8",
    "raw-loader": "^4.0.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^4.10.0",
    "webpack-merge": "^5.9.0"
  }
}
